<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/mosaic_icon_default_padding"
    android:gravity="center"
    android:foregroundGravity="center"
    android:layout_gravity="center">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mosaic_icon_default_padding"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TableRow>

            <ImageButton android:id="@+id/imageButtonNewProject"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingTop="@dimen/mosaic_icon_default_padding"
                android:src="@drawable/icon_project_new"
                android:background="@null"
                android:layout_column="0" />

            <ImageButton
                android:src="@drawable/icon_project_open"
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingTop="@dimen/mosaic_icon_default_padding"
                android:layout_gravity="center"
                android:id="@+id/imageButtonOpenProject"
                android:background="@null"
                android:layout_column="1"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="New Project"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/mosaic_icon_default_padding"
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:layout_column="0"/>
            <TextView
                android:text="Open Project"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/mosaic_icon_default_padding"
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:layout_column="1"/>
        </TableRow>
        <TableRow>

            <ImageButton android:id="@+id/imageButtonExportData"
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingTop="@dimen/mosaic_icon_default_padding"
                android:layout_gravity="center"
                android:src="@drawable/icon_export_data1"
                android:background="@null"
                android:layout_column="0" />

            <ImageButton
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingTop="@dimen/mosaic_icon_default_padding"
                android:id="@+id/imageButtonSettings"
                android:layout_gravity="center"
                android:src="@drawable/icon_settings"
                android:background="@null"
                android:layout_column="1" />
        </TableRow>
        <TableRow>

            <TextView
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingBottom="@dimen/mosaic_icon_default_padding"
                android:text="Export data"
                android:layout_gravity="center"

                android:layout_column="0"/>
            <TextView
                android:paddingLeft="@dimen/mosaic_icon_default_padding"
                android:paddingRight="@dimen/mosaic_icon_default_padding"
                android:paddingBottom="@dimen/mosaic_icon_default_padding"
                android:text="Settings"
                android:layout_gravity="center"
                android:layout_column="1"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>