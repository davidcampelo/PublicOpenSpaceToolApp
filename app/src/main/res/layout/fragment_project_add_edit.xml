<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addEditItem0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:text=""
        android:id="@+id/addEditItemName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/addEditItemIcon"
        android:minLines="1"
        android:hint="Project name"
        android:ellipsize="end"
        android:inputType="text"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:text=""
        android:id="@+id/addEditItemDesc"
        android:layout_below="@+id/addEditItemName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/addEditItemIcon"
        android:hint="Project description"
        android:ellipsize="end"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:maxLines="2"
        android:minLines="2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    <FrameLayout android:id="@+id/map_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7" >
    <com.google.android.gms.maps.MapView android:id="@+id/mapview"
        android:layout_below="@+id/addEditItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </FrameLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addEditSaveButton"
        android:text="@string/fragment_project_add_edit_save"
        android:textAllCaps="false"
        />
</LinearLayout>