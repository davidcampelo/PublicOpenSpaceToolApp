<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.davidcampelo.post.PublicOpenSpaceViewFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewItemImage"
        android:src="@drawable/icon_park"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="POS Name"
            android:id="@+id/viewItemName"
            android:ellipsize="end"
            android:inputType="text"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/viewItemImage"
            android:layout_alignTop="@+id/viewItemImage"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:textColor="#000000"
        android:background="@null"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:text="POS complete address"
        android:id="@+id/viewItemAddress"
        android:layout_below="@+id/viewItemImage"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
